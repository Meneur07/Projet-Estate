<Window x:Class="EstateManager.Views.LoadingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:animatedGif="http://wpfanimatedgif.codeplex.com"
        xmlns:local="clr-namespace:EstateManager.Views"
        mc:Ignorable="d"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        Title="LoadingWindow" Height="75" Width="250" MinHeight="75" MaxHeight="75" MinWidth="250" MaxWidth="250">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Image animatedGif:ImageBehavior.AnimatedSource="../Resources/loading.gif" Grid.Column="0" Width="60" Height="60"/>
        <TextBlock Text="Loading ..." Grid.Column="1" FontSize="30" VerticalAlignment="Center" HorizontalAlignment="Center"/>
    </Grid>
</Window>
